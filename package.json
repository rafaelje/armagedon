{
  "name": "eggplosion",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild src/client.ts --bundle --outfile=dist/client.js --format=esm",
    "server": "tsx src/server.ts",
    "start": "npm run build && npm run server",
    "deploy": "npm run build && firebase deploy --only hosting",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.2",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.27.3",
    "firebase-tools": "^13.25.1",
    "jest": "^29.7.0",
    "phaser": "^3.90.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
