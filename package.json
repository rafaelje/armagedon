{
  "name": "eggplosion",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild src/client.ts --bundle --outfile=dist/client.js --format=esm",
    "server": "deno run --allow-net --allow-read src/server/index.ts",
    "start": "npm run build && npm run server",
    "deploy": "npm run build && firebase deploy --only hosting",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/ws": "^8.5.10",
    "esbuild": "^0.20.2",
    "firebase-tools": "^15.5.1",
    "jest": "^29.7.0",
    "phaser": "^3.80.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  }
}
